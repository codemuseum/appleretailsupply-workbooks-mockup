<div class="outlined-content login-box">
  <h2>Generate a Store Remodel Workbook</h2> 
  <div class="field-row">
    <div class="field-label"><label for="">Location of Store:</label></div>
    <div class="field-value">&nbsp;<select><option><%= ['Australia', 'Canada', 'China', 'France', 'Germany', 'Italy', 'Japan', 'Switzerland', 'UK', 'USA'].join('</option><option>')%></option></select></div>
  </div>

  <div class="field-row">
    <div class="field-label"><label for="">Size of Store:</label></div>
    <div class="field-value">&nbsp;<select><option><%= ['Mini', 'Small', 'Flagship'].join('</option><option>')%></option></select></div>
  </div>

  <div class="centered submit-box">
    <%= submit_tag "Next &raquo;", :onclick => "document.location='/store_remodels/1'" %>
  </div>
</div>